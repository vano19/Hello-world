  th{color:rgb(250,250,250); 
  }
  #s{
    height: 20px;
    width: 750px;
    background: rgb(250,250,250);
    margin-top: 40px;
    margin-right: 100px;

  }
  #w{margin-left: 100px;
  font-family: 'Times New Roman', Times, serif; 
    font-size: 150%;}

